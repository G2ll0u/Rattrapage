

{% extends "layout/base.twig" %}

{% block title %}Accueil - StockFlow{% endblock %}

{% block content %}
<div class="homepage-container user-role-{{ user.role|lower }}">
    <!-- En-tête de la page d'accueil -->
    <section class="hero-section">
        <div class="hero-content">
            <h1>Bienvenue sur <span class="highlight">StockFlow</span></h1>
            <p class="hero-subtitle">Votre solution complète de gestion de stock</p>
            <p class="user-greeting">Connecté en tant que <strong>{{ user.first_name }} {{ user.name }}</strong> ({{ user.role }})</p>
        </div>
    </section>

    <!-- dashboard -->
    <section class="features-section">
        <h2>Optimisez votre gestion de stock</h2>
        
        <div class="features-grid">
            <!-- Carte 1: Suivi en temps réel -->
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h3>Suivi en temps réel</h3>
                <p>Surveillez vos niveaux de stock et recevez des alertes instantanées.</p>
                <div class="feature-button-container">
                    <a href="{{ url('stock', 'index') }}" class="btn btn-primary">
                        <i class="fas fa-arrow-right"></i> Accéder aux stocks
                    </a>
                </div>
            </div>
            
            <!-- Carte 2: Rapports détaillés -->
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-file-alt"></i>
                </div>
                <h3>Rapports détaillés</h3>
                <p>Consultez les rapports sur votre inventaire et suivez les mouvements de stock.</p>
                <div class="feature-button-container">
                    <a href="{{ url('reports', 'index') }}" class="btn btn-primary">
                        <i class="fas fa-arrow-right"></i> Explorer
                    </a>
                </div>
            </div>
            
            {% if user.role in ['Manager', 'Admin'] %}
            <!-- Carte 3: Gestion des commandes -->
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-tasks"></i>
                </div>
                <h3>Gestion des commandes</h3>
                <p>Automatisez vos processus de commande et de réapprovisionnement.</p>
                <div class="feature-button-container">
                    <a href="{{ url('orders', 'index') }}" class="btn btn-primary">
                        <i class="fas fa-arrow-right"></i> Voir les commandes
                    </a>
                </div>
            </div>
            
            <!-- Carte 4: Gestion des fournisseurs -->
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-users"></i>
                </div>
                <h3>Gestion des fournisseurs</h3>
                <p>Organisez et optimisez vos relations avec les fournisseurs.</p>
                <div class="feature-button-container">
                    <a href="{{ url('supplier', 'index') }}" class="btn btn-primary">
                        <i class="fas fa-arrow-right"></i> Gérer les fournisseurs
                    </a>
                </div>
            </div>
            {% endif %}
        </div>
    </section>
</div>
{% endblock %}